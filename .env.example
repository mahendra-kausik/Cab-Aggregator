# ==============================================
# CAB AGGREGATOR LOCAL EDITION - ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env and fill in your actual values
# For local development, most services have fallback mocks

# ==============================================
# APPLICATION ENVIRONMENT
# ==============================================
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# MongoDB Configuration
MONGO_ROOT_USERNAME=cabadmin
MONGO_ROOT_PASSWORD=SecureDevPassword2024
MONGO_DB_NAME=cab_aggregator
MONGO_URI=mongodb://cabadmin:SecureDevPassword2024@localhost:27017/cab_aggregator?authSource=admin

# Redis Configuration (Optional - used for session management)
REDIS_URL=redis://localhost:6379

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters
JWT_EXPIRES_IN=24h

# Encryption key for PII data
ENCRYPTION_KEY=test-encryption-key-exactly-32bb

# ==============================================
# EXTERNAL SERVICES (OPTIONAL - MOCKS AVAILABLE)
# ==============================================

# Mapbox Configuration (Optional - falls back to OpenStreetMap)
# Get your key from: https://account.mapbox.com/access-tokens/
MAPBOX_ACCESS_TOKEN=pk.your_mapbox_access_token_here
VITE_MAPBOX_ACCESS_TOKEN=pk.your_mapbox_access_token_here

# Twilio SMS Configuration (Optional - console logging available)
# Get your credentials from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACyour_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================
# API Endpoints
VITE_API_URL=http://localhost:5000/api
VITE_SOCKET_URL=http://localhost:5000

# ==============================================
# DEVELOPMENT & TESTING
# ==============================================
# Enable development features
ENABLE_DEV_ENDPOINTS=true
ENABLE_CONSOLE_LOGGING=true

# Test Database (for running tests)
TEST_MONGO_URI=mongodb://cabadmin:SecureDevPassword2024@localhost:27017/cab_aggregator_test?authSource=admin

# ==============================================
# DOCKER COMPOSE OVERRIDES
# ==============================================
# These are used by docker-compose.yml
COMPOSE_PROJECT_NAME=cab-aggregator-local

# ==============================================
# SETUP INSTRUCTIONS
# ==============================================
# 1. Copy this file to .env: cp .env.example .env
# 2. Update the JWT_SECRET and ENCRYPTION_KEY with secure random strings
# 3. (Optional) Add your Mapbox token for enhanced maps
# 4. (Optional) Add your Twilio credentials for SMS functionality
# 5. Run: docker-compose up --build
# 6. The application will be available at:
#    - Frontend: http://localhost:3000
#    - Backend API: http://localhost:5000/api
#    - MongoDB: localhost:27017
#    - Redis: localhost:6379